<li data-key="equipments.<%= name %>" data-value="<%= value %>">
    <label class="normal"><%= name %></label>
    <span data-min="0" data-max="">
        <a href=":decr(equipments.<%= name %>)"></a>
        <span data-for="equipments.<%= name %>"><%= value %></span>
        <a href=":incr(equipments.<%= name %>)"></a>
    </span>
    <% if (item) { %>
        <span>
            <%= item.get('groups').join("/") %>
        </span>
        <span>
            <%= item.get('costs') %> S
        </span>
        <span>
            <%= item.get('weight') %> Stein
        </span>
        <span class="lwb">
            <% if (item.get('protection')) { %>
            <%= item.get('protection') %> KÃ¤lteschutz
            <% } %>

            <% if (item.get('skill')) { %>
            <%= item.get('skill') %><% } %><% if (item.get('distance')) { %>[<%= item.get('distance') %>]
            <% } %>

            <% var item_dice = item.get('dice') %>
            <% if (item_dice && _.isArray(item_dice)) { %>
            <%= item_dice.join("+") %>
            <% } else if (item_dice) { %>
            <%= item_dice %>
            <% } %>

            <% var item_bonus = item.get('bonus') %>
            <% if (item_bonus && _.isArray(item_bonus['attribute'])) { %>
            <%= item_bonus['attribute'].join(item_bonus['value'] + "/") %><%= item_bonus['value'] %>
            <% } else if (item_bonus) { %>
            <%= item_bonus['attribute'] %><%= item_bonus['value'] %>
            <% } %>
        </span>
    <% } %>
</li>