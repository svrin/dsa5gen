<h2><%= character.get('name') %></h2>
<ul>
    <% var gender = character.get('gender'); %>
    <% var lifegrade = character.get('lifegrade'); %>
    <% var profession = character.get('profession'); %>
    <% var culture = character.get('culture'); %>
    <% var race = character.get('race'); %>

    <% if (culture && race && lifegrade) { %>
    <li data-href="profession">

        <% if (profession) { %>
        <%= profession.get('name_' + gender) || profession.get('name') %>
        <% } else { %>
        <a href="#profession">Profession wählen</a>
        <% } %>
    </li>
    <% } if (race && lifegrade) { %>
    <li data-href="culture">
        <% if (culture) { %>
        <%= culture.get('name_' + gender) || culture.get('name') %>
        (<%= character.get('social') || "Frei" %>)
        <% } else { %>
        <a href="#culture">Kultur wählen</a>
        <% } %>
    </li>
    <% } if (lifegrade) { %>
    <li data-href="race">
        <% if (race) { %>
        <%= race.get('name_' + gender) || race.get('name') %>
        <% } else { %>
        <a href="#race">Rasse wählen</a>
        <% } %>
    </li>
    <% } %>

    <% if (lifegrade) { %>
    <li class="spacer">
        <hr/>
    </li>

    <li data-href="lifegrade">
        <label><%= __("Erfahrungsgrad") %></label>
        <span><%= lifegrade.get('name') %></span>
    </li>

    <li>
        <label title="Gesamt zur Verfügung stehenden Abenteuerpunkte"><%= __("AP") %> (Gesamt)</label>
        <span><%= character.get('AP') %></span>
    </li>

    <li name="character.ap">
        <label title="Offene Abenteuerpunkte"><%= __("AP") %> (Offen)</label>
        <% value = character.get('AP') - character.get('costs') %>
        <span data-key="AP" data-value="<%= value %>"><%= value %></span>
    </li>
    <% } else { %>
    <li data-href="lifegrade">
        <a href="#profile">Erfahrungsgrad wählen</a>
    </li>
    <% } %>
</ul>
